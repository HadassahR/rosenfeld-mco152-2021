<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<GridPane
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        alignment="center" hgap="18" vgap="18"
        fx:controller="rosenfeld.scrabble.BananagramsController">
    <padding>
        <Insets top="25" right="25" bottom="18" left="25"/>
    </padding>

    <Label fx:id = "tile1"
           style="-fx-border: 1; -fx-border-color:black; -fx-border-style: solid; -fx-padding: 10 12 10 12; -fx-background-color: white"
           GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <Label fx:id = "tile2"
           style="-fx-border: 1; -fx-border-color:black; -fx-border-style: solid; -fx-padding: 10 12 10 12; -fx-background-color: white"
           GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <Label fx:id = "tile3"
           style="-fx-border: 1; -fx-border-color:black; -fx-border-style: solid; -fx-padding: 10 12 10 12; -fx-background-color: white"
           GridPane.columnIndex="2" GridPane.rowIndex="0"/>
    <Label fx:id = "tile4"
           style="-fx-border: 1; -fx-border-color:black; -fx-border-style: solid; -fx-padding:10 12 10 12; -fx-background-color: white"
           GridPane.columnIndex="3" GridPane.rowIndex="0"/>
    <Label fx:id = "tile5"
           style="-fx-border: 1; -fx-border-color:black; -fx-border-style: solid; -fx-padding: 10 12 10 12; -fx-background-color: white"
           GridPane.columnIndex="4" GridPane.rowIndex="0"/>
    <Label fx:id = "tile6"
           style="-fx-border: 1; -fx-border-color:black; -fx-border-style: solid; -fx-padding: 10 12 10 12; -fx-background-color: white"
           GridPane.columnIndex="5" GridPane.rowIndex="0"/>
    <Label fx:id = "tile7"
           style="-fx-border: 1; -fx-border-color:black; -fx-border-style: solid; -fx-padding: 10 12 10 12; -fx-background-color: white"
           GridPane.columnIndex="6" GridPane.rowIndex="0"/>

    <Button text="Submit" onAction="#submitWord"
            GridPane.columnIndex="7" GridPane.rowIndex="0"/>
    <Button text="Clear" onAction="#clearTiles"
            GridPane.columnIndex="7" GridPane.rowIndex="1"/>
    <Label text="x Points" fx:id="points"
           style="-fx-border: 1; -fx-border-color:black; -fx-border-style: solid; -fx-padding: 10 12 10 12"
           GridPane.columnIndex="7" GridPane.rowIndex="2"/>

    <Label fx:id = "let1" text = "A"
           style="-fx-border: 1; -fx-border-color:black; -fx-border-style: solid; -fx-padding: 10 12 10 12; -fx-background-color: #91c5db"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <Label fx:id = "let2" text = "B"
           style="-fx-border: 1; -fx-border-color:black; -fx-border-style: solid; -fx-padding: 10 12 10 12; -fx-background-color: #91c5db"
           GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Label fx:id = "let3" text = "C"
           style="-fx-border: 1; -fx-border-color:black; -fx-border-style: solid; -fx-padding: 10 12 10 12; -fx-background-color: #91c5db"
           GridPane.columnIndex="2" GridPane.rowIndex="2"/>
    <Label fx:id = "let4" text = "D"
           style="-fx-border: 1; -fx-border-color:black; -fx-border-style: solid; -fx-padding: 10 12 10 12; -fx-background-color: #91c5db"
           GridPane.columnIndex="3" GridPane.rowIndex="2"/>
    <Label fx:id = "let5" text = "E"
           style="-fx-border: 1; -fx-border-color:black; -fx-border-style: solid; -fx-padding: 10 12 10 12; -fx-background-color: #91c5db"
           GridPane.columnIndex="4" GridPane.rowIndex="2"/>
    <Label fx:id = "let6" text = "F"
           style="-fx-border: 1; -fx-border-color:black; -fx-border-style: solid; -fx-padding: 10 12 10 12; -fx-background-color: #91c5db"
           GridPane.columnIndex="5" GridPane.rowIndex="2"/>
    <Label fx:id = "let7" text = "G"
           style="-fx-border: 1; -fx-border-color:black; -fx-border-style: solid; -fx-padding: 10 12 10 12; -fx-background-color: #91c5db"
           GridPane.columnIndex="6" GridPane.rowIndex="2"/>

</GridPane>
